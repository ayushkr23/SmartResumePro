<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.RoleController">
   <top>
      <!-- Header Navigation -->
      <VBox styleClass="nav-container">
         <HBox alignment="CENTER_LEFT" spacing="24.0">
            <Label fx:id="welcomeLabel" text="Welcome! ðŸ‘‹" styleClass="label-heading" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="selectedRoleLabel" text="No role selected" styleClass="label-muted" />
            <Button text="â† Back" onAction="#handleBack" styleClass="button-secondary" />
         </HBox>
         
         <!-- Progress Indicator -->
         <HBox alignment="CENTER" spacing="16.0" styleClass="progress-indicator">
            <VBox alignment="CENTER" spacing="4.0">
               <Label text="1" styleClass="step-indicator, step-indicator-completed" />
               <Label text="Login" styleClass="label-muted" style="-fx-font-size: 10px;" />
            </VBox>
            <Label text="â†’" styleClass="label-muted" />
            <VBox alignment="CENTER" spacing="4.0">
               <Label text="2" styleClass="step-indicator, step-indicator-active" />
               <Label text="Choose Role" styleClass="label-muted" style="-fx-font-size: 10px;" />
            </VBox>
            <Label text="â†’" styleClass="label-muted" />
            <VBox alignment="CENTER" spacing="4.0">
               <Label text="3" styleClass="step-indicator" />
               <Label text="Build Resume" styleClass="label-muted" style="-fx-font-size: 10px;" />
            </VBox>
            <Label text="â†’" styleClass="label-muted" />
            <VBox alignment="CENTER" spacing="4.0">
               <Label text="4" styleClass="step-indicator" />
               <Label text="Export PDF" styleClass="label-muted" style="-fx-font-size: 10px;" />
            </VBox>
         </HBox>
      </VBox>
   </top>
   
   <center>
      <HBox spacing="24.0" styleClass="container">
         
         <!-- Left Side - Role Selection -->
         <VBox spacing="24.0" prefWidth="600" HBox.hgrow="ALWAYS">
            
            <!-- Header Section -->
            <VBox spacing="16.0" alignment="CENTER">
               <Label text="ðŸŽ¯ Choose Your Career Path" styleClass="label-title" />
               <Label text="Select the role that best matches your interests and career goals. We'll personalize your resume accordingly." 
                      styleClass="label-subheading" textAlignment="CENTER" wrapText="true" maxWidth="500" />
            </VBox>
            
            <!-- Role Cards Container -->
            <ScrollPane fx:id="roleScrollPane" fitToWidth="true" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER" 
                       styleClass="scroll-pane" prefHeight="400">
               <content>
                  <VBox spacing="24.0" alignment="CENTER">
                     <padding>
                        <Insets top="16.0" bottom="16.0" left="16.0" right="16.0" />
                     </padding>
                     
                     <FlowPane fx:id="roleCardsContainer" hgap="20.0" vgap="20.0" alignment="CENTER" 
                              prefWrapLength="600" />
                  </VBox>
               </content>
            </ScrollPane>
            
            <!-- Continue Button -->
            <HBox alignment="CENTER" spacing="16.0">
               <Button fx:id="continueButton" text="Continue to Resume Builder â†’" onAction="#handleContinue" 
                      styleClass="button, button-large, button-success" prefWidth="300" />
            </HBox>
            
         </VBox>
         
         <!-- Right Side - Role Details -->
         <VBox fx:id="roleDetailsContainer" spacing="20.0" prefWidth="350" maxWidth="400" visible="false"
               styleClass="card">
            
            <Label text="ðŸ“‹ Role Details" styleClass="label-heading" />
            
            <!-- Skills Section -->
            <VBox fx:id="skillsContainer" spacing="12.0">
               <!-- Content will be populated dynamically -->
            </VBox>
            
            <Separator />
            
            <!-- Tips Section -->
            <VBox fx:id="tipsContainer" spacing="12.0">
               <!-- Content will be populated dynamically -->
            </VBox>
            
            <Separator />
            
            <!-- Project Ideas Section -->
            <VBox fx:id="projectsContainer" spacing="12.0">
               <!-- Content will be populated dynamically -->
            </VBox>
            
            <Separator />
            
            <!-- Objective Preview -->
            <VBox spacing="12.0">
               <Label text="ðŸ“ Objective Preview:" styleClass="label-subheading" />
               <TextArea fx:id="objectivePreview" prefRowCount="4" wrapText="true" editable="false"
                        styleClass="text-area" promptText="Your personalized objective will appear here..." />
            </VBox>
            
         </VBox>
         
      </HBox>
   </center>
   
   <bottom>
      <!-- Footer -->
      <VBox alignment="CENTER" spacing="8.0" styleClass="nav-container" style="-fx-border-width: 1 0 0 0;">
         <Label text="ðŸ’¡ Tip: Choose the role that excites you most - you can always build multiple resumes later!" 
                styleClass="label-muted" textAlignment="CENTER" />
         <Label text="Your selection will help us provide personalized tips and suggestions" 
                styleClass="label-muted" style="-fx-font-size: 10px;" textAlignment="CENTER" />
      </VBox>
   </bottom>
   
</BorderPane>